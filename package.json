{
  "name": "store-platform",
  "version": "1.0.0",
  "description": "Kubernetes-native Store Provisioning Platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend/dashboard && npm run dev",
    "dev:backend": "cd backend/api && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend/dashboard && npm run build",
    "build:backend": "cd backend/api && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:e2e",
    "test:frontend": "cd frontend/dashboard && npm test",
    "test:backend": "cd backend/api && npm test",
    "test:e2e": "cd e2e/tests && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend/dashboard && npm run lint",
    "lint:backend": "cd backend/api && npm run lint",
    "helm:lint": "helm lint helm/dashboard && helm lint helm/store-engine/woocommerce",
    "k3d:up": "./scripts/setup-k3d.sh",
    "k3d:down": "k3d cluster delete store-platform",
    "install:platform": "helm upgrade --install store-platform helm/dashboard -n store-platform --create-namespace -f helm/dashboard/values-local.yaml",
    "install:ingress": "kubectl apply -f https://raw.githubusercontent.com/kubernetes/ingress-nginx/main/deploy/static/provider/cloud/deploy.yaml"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "workspaces": [
    "frontend/dashboard",
    "backend/api",
    "e2e/tests"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
